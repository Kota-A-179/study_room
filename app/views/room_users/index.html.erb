<%= render partial: 'shared/header', locals: { room: @room } %>
<div class="room-users-index-main">
  <%= render partial: 'shared/sidebar', locals: { rooms: @rooms } %>
  <div class="room-users-wrap">
    <% @room.room_users.each do |room_user| %>
      <div class="user">
        <div class="user-icon">
          <%= link_to(room_room_users_path(@room), class: "user-mypage-btn") do %>
            <span class="user-nickname"><%= room_user.user.nickname %></span>
            <%= image_tag room_user.user.icon.image_path, style: "width: 100px; height: auto;", class: "user-mypage-btn-icon" %>
            <% if room_user.user.nickname.present? %>
            <% end %>
          <% end %>
        </div>
        <div class="user-status">
          <%= room_user.user.status.name %>
        </div>
        <div class="user-study-title">
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render 'shared/footer' %>